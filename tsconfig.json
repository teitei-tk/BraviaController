{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es5", "es2015.promise", "esnext" ],
    "target": "es5",
    "outDir": "./build",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "pretty": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "**/*.spec.ts",
    "./build/**/*"
  ]
}
